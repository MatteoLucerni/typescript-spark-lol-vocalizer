{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Spark",
    "author": "Matteo Lucerni",
    "version": "1.0.0",
    "minimum-overwolf-version": "0.160.0",
    "description": "Customizable voice alerts for League of Legends",
    "dock_button_title": "Spark",
    "icon": "icons/IconMouseOver.png",
    "icon_gray": "icons/IconMouseNormal.png",
    "launcher_icon": "icons/desktop-icon.ico",
    "window_icon": "icons/IconMouseOver.png"
  },
  "permissions": [
    "Hotkeys",
    "GameInfo",
    "GameEvents",
    "FileSystem"
  ],
  "data": {
    "start_window": "background",
    "hotkeys": {
      "spark_showhide": {
        "title": "Show/Hide In-Game Window",
        "action-type": "toggle",
        "default": "Ctrl+F"
      }
    },
    "protocol_override_domains": {
      "googlesyndication": "http"
    },
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "https://*.google-analytics.com",
        "http://*.google-analytics.com",
        "https://www.googleapis.com"
      ]
    },
    "force_browser": "user",
    "windows": {
      "background": {
        "file": "background.html",
        "background_optimization": true,
        "is_background_page": true
      },
      "desktop": {
        "file": "desktop.html",
        "desktop_only": true,
        "native_window": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 1212,
          "height": 699
        },
        "min_size": {
          "width": 1212,
          "height": 699
        }
      },
      "in_game": {
        "file": "in_game.html",
        "desktop_only": true,
        "native_window": true,
        "focus_game_takeover": "ReleaseOnHidden",
        "focus_game_takeover_release_hotkey": "spark_showhide",
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 1212,
          "height": 699
        },
        "min_size": {
          "width": 1212,
          "height": 699
        }
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [
        5426
      ]
    },
    "game_events": [
      5426
    ],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [
            5426
          ]
        },
        "start_minimized": true
      }
    ],
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    },
    "files": [
      "assets/dragon.mp3",
      "assets/blue-spawn.mp3",
      "assets/scuttle-bot-spawn.mp3",
      "assets/scuttle-top-spawn.mp3",
      "assets/red-spwan.mp3",
      "assets/one-min-drake.mp3",
      "assets/dragon-slain.mp3",
      "assets/window-loaded.mp3"
    ]
  }
}